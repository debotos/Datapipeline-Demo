{
	"heading": "Users",
	"capabilities": {
		"edit": {
			"enable": true,
			"label": "Edit user"
		},
		"delete": true,
		"add": {
			"enable": true,
			"label": "Add a new user",
			"fields": ["first_name", "last_name", "email", "address", "gender", "permission", "active"],
			"initialValues": {
				"gender": "male",
				"permission": ["read"],
				"active": false
			}
		},
		"search": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "ip_address"]
		},
		"download": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "gender", "ip_address"],
			"props": {
				"note": "Disclaimer Message - This data is property of ezilm and you can not use without permission",
				"sheetName": "Sheet1"
			}
		},
		"filter": {
			"enable": true,
			"fields": ["gender", "active"]
		},
		"setting": {
			"enable": true,
			"props": { "hide": ["ip_address"] }
		},
		"refresh": true,
		"pagination": {
			"enable": true,
			"defaultPageSize": 10,
			"showSizeChanger": true,
			"pageSizeOptions": [10, 16, 25, 50, 100],
			"showQuickJumper": true
		}
	},
	"columns": [
		{
			"headerName": "First Name",
			"dataIndex": "first_name",
			"fixed": "left",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "First Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "First name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "Last Name",
			"dataIndex": "last_name",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Last Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Last name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "Age",
			"dataIndex": "age",
			"sortable": true,
			"searchable": true,
			"field": {
				"editable": true,
				"type": "number",
				"placeholder": "Age",
				"hasFeedback": true,
				"validation": [
					{ "required": true, "message": "Age is required" },
					{ "type": "integer", "message": "Only integer number allowed!" },
					{
						"type": "number",
						"min": 20,
						"max": 100,
						"message": "Age have to be between 20 and 100"
					}
				]
			}
		},
		{
			"headerName": "Company",
			"dataIndex": "company",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Company",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Company is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "Country",
			"dataIndex": "country",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Country",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Country is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "State",
			"dataIndex": "state",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "State",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "State is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "City",
			"dataIndex": "city",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "City",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "City is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"width": 200,
			"headerName": "Address",
			"dataIndex": "address",
			"searchable": true,
			"field": {
				"editable": true,
				"type": "textarea",
				"rows": 2,
				"placeholder": "Address",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Address is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 200, "message": "Max value length is 200" }
				]
			}
		},
		{
			"headerName": "Balance",
			"dataIndex": "balance",
			"searchable": true,
			"field": {
				"editable": true,
				"type": "number",
				"placeholder": "Balance",
				"hasFeedback": true,
				"validation": [{ "whitespace": true, "required": true, "message": "Balance is required" }]
			}
		},
		{
			"width": 350,
			"headerName": "Email",
			"dataIndex": "email",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "email",
				"placeholder": "Email",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Email is required" },
					{ "type": "email", "message": "Email is not valid" }
				]
			}
		},

		{
			"headerName": "Gender",
			"dataIndex": "gender",
			"field": {
				"editable": true,
				"type": "radio",
				"placeholder": "Gender",
				"options": [
					{ "label": "Male", "value": "male", "disabled": false },
					{ "label": "Female", "value": "female", "disabled": false }
				],
				"validation": [{ "required": true, "message": "Gender is required" }]
			},
			"filter": true
		},
		{
			"headerName": "Phone",
			"dataIndex": "phone",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Phone",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Phone is required" },
					{ "min": 6, "message": "Minimum length is 6" },
					{ "max": 15, "message": "Max value length is 15" }
				]
			}
		},
		{
			"headerName": "IP",
			"dataIndex": "ip_address",
			"searchable": true,
			"field": {
				"editable": false
			}
		},
		{
			"headerName": "Role",
			"dataIndex": "role",
			"field": {
				"editable": true,
				"type": "checkbox",
				"placeholder": "Role",
				"options": [
					{ "label": "Admin", "value": "admin", "disabled": false },
					{ "label": "Partner", "value": "partner", "disabled": false },
					{ "label": "User", "value": "user", "disabled": false }
				],
				"validation": [{ "type": "array", "required": true, "message": "Role is required" }]
			},
			"filter": true
		},
		{
			"headerName": "Permission",
			"dataIndex": "permission",
			"field": {
				"editable": true,
				"type": "checkbox",
				"placeholder": "Permission",
				"options": [
					{ "label": "Add", "value": "add", "disabled": false },
					{ "label": "Delete", "value": "delete", "disabled": false },
					{ "label": "Edit", "value": "edit", "disabled": false },
					{ "label": "Read", "value": "read", "disabled": false }
				],
				"validation": [{ "type": "array", "required": true, "message": "Permission is required" }]
			},
			"filter": true
		},
		{
			"headerName": "Active",
			"dataIndex": "active",
			"align": "center",
			"field": {
				"editable": true,
				"type": "boolean",
				"input": "switch",
				"options": [
					{ "label": "Yes", "value": true, "disabled": false },
					{ "label": "No", "value": false, "disabled": false }
				]
			},
			"filter": true
		},
		{
			"headerName": "Status",
			"dataIndex": "status",
			"field": {
				"editable": true,
				"type": "checkbox",
				"placeholder": "Status",
				"options": [
					{ "label": "Working", "value": "Working", "disabled": false },
					{ "label": "Sleeping", "value": "Sleeping", "disabled": false },
					{ "label": "Busy", "value": "Busy", "disabled": false }
				],
				"validation": [{ "type": "array", "required": true, "message": "Status is required" }]
			},
			"filter": true
		},
		{
			"headerName": "Action",
			"dataIndex": "action",
			"fixed": "right",
			"field": {
				"editable": false
			}
		}
	]
}
