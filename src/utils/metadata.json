{
	"heading": "Users",
	"capabilities": {
		"edit": {
			"enable": true,
			"label": "Edit user"
		},
		"delete": true,
		"add": {
			"enable": true,
			"label": "Add a new user",
			"fields": ["first_name", "last_name", "email", "address", "gender", "permission", "active"],
			"initialValues": {
				"gender": "male",
				"permission": ["read"],
				"active": false
			}
		},
		"search": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "ip_address"]
		},
		"download": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "gender", "ip_address"],
			"props": {
				"note": "Disclaimer Message - This data is property of ezilm and you can not use without permission",
				"sheetName": "Sheet1"
			}
		},
		"filter": {
			"enable": true,
			"fields": ["gender", "active"]
		},
		"setting": {
			"enable": true,
			"props": { "hide": ["ip_address"] }
		},
		"refresh": true,
		"pagination": {
			"enable": true,
			"defaultPageSize": 10,
			"showSizeChanger": true,
			"pageSizeOptions": [10, 16, 25, 50, 100],
			"showQuickJumper": true
		}
	},
	"columns": [
		{
			"headerName": "First Name",
			"dataIndex": "first_name",
			"width": 150,
			"fixed": "left",
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "First Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "First name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "Last Name",
			"dataIndex": "last_name",
			"width": 150,
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Last Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Last name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"headerName": "Address",
			"dataIndex": "address",
			"searchable": true,
			"field": {
				"editable": true,
				"type": "textarea",
				"rows": 2,
				"placeholder": "Address",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Address is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 200, "message": "Max value length is 200" }
				]
			}
		},
		{
			"headerName": "Email",
			"dataIndex": "email",
			"width": 250,
			"searchable": true,
			"sortable": true,
			"field": {
				"editable": true,
				"type": "email",
				"placeholder": "Email",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Email is required" },
					{ "type": "email", "message": "Email is not valid" }
				]
			}
		},
		{
			"headerName": "IP",
			"dataIndex": "ip_address",
			"searchable": true,
			"field": {
				"editable": false
			}
		},
		{
			"headerName": "Gender",
			"dataIndex": "gender",
			"width": 120,
			"field": {
				"editable": true,
				"type": "radio",
				"placeholder": "Gender",
				"options": [
					{ "label": "Male", "value": "male", "disabled": false },
					{ "label": "Female", "value": "female", "disabled": false }
				],
				"validation": [{ "required": true, "message": "Gender is required" }]
			},
			"filter": true
		},
		{
			"headerName": "Permission",
			"dataIndex": "permission",
			"width": 170,
			"field": {
				"editable": true,
				"type": "checkbox",
				"placeholder": "Permission",
				"options": [
					{ "label": "Add", "value": "add", "disabled": false },
					{ "label": "Delete", "value": "delete", "disabled": false },
					{ "label": "Edit", "value": "edit", "disabled": false },
					{ "label": "Read", "value": "read", "disabled": false }
				],
				"validation": [{ "type": "array", "required": true, "message": "Permission is required" }]
			},
			"filter": true
		},
		{
			"headerName": "Active",
			"dataIndex": "active",
			"width": 100,
			"align": "center",
			"field": {
				"editable": true,
				"type": "boolean",
				"input": "switch",
				"options": [
					{ "label": "Yes", "value": true, "disabled": false },
					{ "label": "No", "value": false, "disabled": false }
				]
			},
			"filter": true
		},
		{
			"headerName": "Action",
			"dataIndex": "action",
			"fixed": "right",
			"width": 130,
			"field": {
				"editable": false
			}
		}
	]
}
