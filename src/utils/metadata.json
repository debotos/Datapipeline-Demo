{
	"heading": "Users",
	"capabilities": {
		"edit": {
			"enable": true,
			"label": "Edit user"
		},
		"delete": true,
		"add": {
			"enable": true,
			"label": "Add a new user",
			"fields": ["first_name", "last_name", "email", "address", "gender", "permission", "active"],
			"initialValues": {
				"gender": "Male",
				"permission": ["read"],
				"active": false
			}
		},
		"search": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "ip_address"]
		},
		"download": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "gender", "ip_address"],
			"props": {
				"note": "Disclaimer Message - This data is property of ezilm and you can not use without permission",
				"sheetName": "Sheet1"
			}
		},
		"filter": {
			"enable": true,
			"fields": ["gender", "active"]
		},
		"setting": {
			"enable": true,
			"props": { "hide": ["ip_address"] }
		},
		"refresh": true,
		"pagination": {
			"enable": true,
			"position": ["topRight", "bottomRight"],
			"pageSize": 10,
			"showSizeChanger": true,
			"pageSizeOptions": [10, 16, 25, 50, 100],
			"showQuickJumper": true
		}
	},
	"columnDefs": [
		{
			"headerName": "First Name",
			"field": "first_name",
			"width": 140,
			"editable": true,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "Last Name",
			"field": "last_name",
			"width": 140,
			"editable": true,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "Address",
			"field": "address",
			"width": 220,
			"editable": true,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "Email",
			"field": "email",
			"flex": 1,
			"minWidth": 200,
			"editable": true,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "IP",
			"field": "ip_address",
			"width": 150,
			"editable": false,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "Gender",
			"field": "gender",
			"width": 100,
			"editable": true,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "Permission",
			"field": "permission",
			"width": 150,
			"editable": true,
			"filter": true,
			"cellRenderer": "arrayValueRenderer",
			"cellEditor": "arrayValueEditor",
			"fieldProps": {
				"type": "checkbox",
				"placeholder": "Permission",
				"options": {
					"array": [
						{ "label": "Add", "value": "add", "disabled": false },
						{ "label": "Delete", "value": "delete", "disabled": false },
						{ "label": "Edit", "value": "edit", "disabled": false },
						{ "label": "Read", "value": "read", "disabled": false }
					],
					"object": {
						"add": { "label": "Add", "value": "add", "disabled": false },
						"delete": { "label": "Delete", "value": "delete", "disabled": false },
						"edit": { "label": "Edit", "value": "edit", "disabled": false },
						"read": { "label": "Read", "value": "read", "disabled": false }
					}
				},
				"validation": [{ "type": "array", "required": true, "message": "Permission is required" }]
			}
		},
		{
			"headerName": "Active",
			"field": "active",
			"width": 100,
			"editable": true,
			"filter": true,
			"sortable": true
		},
		{
			"headerName": "Action",
			"field": "action",
			"width": 130,
			"pinned": "right",
			"editable": false,
			"filter": false,
			"sortable": false
		}
	]
}
