{
	"capabilities": {
		"edit": true,
		"delete": true,
		"add": {
			"enable": true,
			"label": "Add a new user",
			"fields": ["first_name", "last_name", "email", "gender"],
			"initialValues": {
				"gender": "Male"
			}
		}
	},
	"columns": [
		{
			"title": "First Name",
			"dataIndex": "first_name",
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "First Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "First name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"title": "Last Name",
			"dataIndex": "last_name",
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Last Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Last name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			}
		},
		{
			"title": "Email",
			"dataIndex": "email",
			"field": {
				"editable": true,
				"type": "email",
				"placeholder": "Email",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Email is required" },
					{ "type": "email", "message": "Email is not valid" }
				]
			}
		},
		{
			"title": "Gender",
			"dataIndex": "gender",
			"field": {
				"editable": true,
				"type": "radio",
				"placeholder": "Gender",
				"options": [
					{ "label": "Male", "value": "Male", "disabled": false },
					{ "label": "Female", "value": "Female", "disabled": false }
				]
			}
		},
		{
			"title": "IP",
			"dataIndex": "ip_address",
			"field": {
				"editable": false
			}
		},
		{
			"title": "Action",
			"dataIndex": "action",
			"field": {
				"editable": false
			}
		}
	]
}
