{
	"heading": "Users",
	"capabilities": {
		"edit": true,
		"delete": true,
		"add": {
			"enable": true,
			"label": "Add a new user",
			"fields": ["first_name", "last_name", "email", "gender"],
			"initialValues": {
				"gender": "Male"
			}
		},
		"search": {
			"enable": true,
			"fields": ["first_name", "last_name", "email", "ip_address"]
		},
		"download": true,
		"filter": {
			"enable": true,
			"fields": ["gender"]
		},
		"setting": {
			"enable": true,
			"props": { "hide": ["ip_address"] }
		},
		"refresh": true,
		"pagination": {
			"enable": true,
			"position": ["topRight", "bottomRight"],
			"pageSize": 10,
			"showSizeChanger": true,
			"pageSizeOptions": [10, 16, 25, 50, 100],
			"showQuickJumper": true
		}
	},
	"columns": [
		{
			"title": "First Name",
			"dataIndex": "first_name",
			"searchable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "First Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "First name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			},
			"sorting": {
				"enable": true,
				"type": "string",
				"sortingProps": {
					"sortDirections": ["descend", "ascend"]
				}
			}
		},
		{
			"title": "Last Name",
			"dataIndex": "last_name",
			"searchable": true,
			"field": {
				"editable": true,
				"type": "text",
				"placeholder": "Last Name",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Last name is required" },
					{ "min": 2, "message": "Minimum length is 2" },
					{ "max": 10, "message": "Max value length is 10" }
				]
			},
			"sorting": {
				"enable": true,
				"type": "string",
				"sortingProps": {
					"sortDirections": ["descend", "ascend"]
				}
			}
		},
		{
			"title": "Email",
			"dataIndex": "email",
			"searchable": true,
			"field": {
				"editable": true,
				"type": "email",
				"placeholder": "Email",
				"hasFeedback": true,
				"validation": [
					{ "whitespace": true, "required": true, "message": "Email is required" },
					{ "type": "email", "message": "Email is not valid" }
				]
			},
			"sorting": {
				"enable": true,
				"type": "string",
				"sortingProps": {
					"sortDirections": ["descend", "ascend"]
				}
			}
		},
		{
			"title": "Gender",
			"dataIndex": "gender",
			"field": {
				"editable": true,
				"type": "radio",
				"placeholder": "Gender",
				"options": [
					{ "label": "Male", "value": "Male", "disabled": false },
					{ "label": "Female", "value": "Female", "disabled": false }
				]
			},
			"filter": true
		},
		{
			"title": "IP",
			"dataIndex": "ip_address",
			"searchable": true,
			"field": {
				"editable": false
			}
		},
		{
			"title": "Action",
			"dataIndex": "action",
			"field": {
				"editable": false
			}
		}
	]
}
